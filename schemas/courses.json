{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "_id": {
                "type": "object",
                "properties": {
                    "$oid": {
                        "type": "string"
                    }
                },
                "additionalProperties": false,
                "required": [
                    "$oid"
                ]
            },
            "name": {
                "type": "string"
            },
            "description": {
                "type": "string"
            }
        },
        "additionalProperties": false,
        "required": [
            "_id",
            "name",
            "description"
        ]
    }
}